#!/bin/bash

set -Eeo pipefail


# if env dir dows not exist, run python3 -m venv env
if [ ! -d "env" ]; then
    python3 -m venv env
fi

if [ -z "$VIRTUAL_ENV" ]; then
    echo "Must activate the virtualenv before running this script"
    exit 1
fi


set -x
pip3 install -q -r requirements.txt > /dev/null
pip3 install -q -e cynthia > /dev/null
set +x
